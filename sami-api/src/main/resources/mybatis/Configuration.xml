<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="cacheEnabled" value="true" />
		<setting name="useGeneratedKeys" value="true" />
	</settings>

	<typeAliases>
		<typeAlias alias="User" type="person.zerry.sami_api.entity.User" />
		<typeAlias alias="Message" type="person.zerry.sami_api.entity.Message" />
		<typeAlias alias="Comment" type="person.zerry.sami_api.entity.Comment" />
		<typeAlias alias="Friend" type="person.zerry.sami_api.entity.Friend" />
		<typeAlias alias="Count" type="person.zerry.sami_api.entity.Count" />
		<typeAlias alias="Target" type="person.zerry.sami_api.entity.Target" />
		<typeAlias alias="Topic" type="person.zerry.sami_api.entity.Topic" />	
		<typeAlias alias="TopicComment" type="person.zerry.sami_api.entity.TopicComment" />													
		<typeAlias alias="PrivateMsg" type="person.zerry.sami_api.entity.PrivateMsg" />		
		<typeAlias alias="PrivateMsgInfo" type="person.zerry.sami_api.entity.PrivateMsgInfo" />		
		<typeAlias alias="Label" type="person.zerry.sami_api.entity.Label" />

	</typeAliases>

	<plugins>
		<plugin interceptor="person.zerry.sami_api.interceptors.PageHelperInterceptor"></plugin>
	</plugins>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/sami" />
				<property name="username" value="root" />
				<property name="password" value="486579" />
			</dataSource>
		</environment>
	</environments>

	<!-- spring整合后，有获取mapper的机制，无需指定 <mappers> <mapper resource="resources/mybatis/mappers/UserMapper.xml" 
		/> </mappers> -->
</configuration>